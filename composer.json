{
    "name": "somoza/consider-donating",
    "description": "A common protocol for gathering donations for your OSS package via Composer.",
    "type": "composer-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Gabriel Somoza",
            "email": "gabriel@somoza.me"
        }
    ],
    "minimum-stability": "stable",
    "require": {
        "ext-json": "*",
        "composer-plugin-api": "^1.1",
        "symfony/process": "^4.0",
        "webmozart/assert": "^1.4",
        "somoza/cli-auth": "^0.1.0"
    },
    "require-dev": {
        "composer/composer": "^1.8"
    },
    "autoload": {
        "psr-4": {
            "Somoza\\ConsiderDonating\\": "src/"
        }
    },
    "extra": {
        "class": [
            "\\Somoza\\ConsiderDonating\\DonationsPlugin",
            "\\Somoza\\ConsiderDonating\\PromoterPlugin"
        ],
        "donations": {
            "url": "https://www.patreon.com/somoza"
        }
        
    }
}
